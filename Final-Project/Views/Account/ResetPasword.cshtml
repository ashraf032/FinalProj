@model AccountVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>

        .register {
            width: 100%;
            box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
            border-radius: 5px;
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: gray;
            transition: .3s;
        }

            .register:hover {
                background-color: #DCDCDC;
                color: #3AA6D4;
            }
    </style>

</head>
<body>
    
    <section class="vh-100 bg-image" style="background-color: #3AA6D4; height:100%;">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3" style="">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">

                        <div class="card" style="border-radius: 15px; ">
                            <div class="card-body p-5">

                                <h2 class="text-uppercase text-center mb-5"><img style="width:60%;" src="~/assets/image/cdbe7be1-6efd-473c-9f5d-1104414be4a0logo.svg" /><br /><small style=" font-size: 20px; color: #3AA6D4;">Bussines Area</small></h2>
                                <form method="post">
                                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"> </div>
                                    <div style="display:none">
                                        <input asp-for="Token">
                                        <input asp-for="Appuser.Email">

                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="text" asp-for="Password" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Password">Password</label>
                                        <span class="text text-danger" asp-validation-for="Password"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="ConfirmPassword">ConfirmPassword</label>
                                        <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button style="background-color: #3AA6D4; color:white !important;" type="submit" class="btn btn-block btn-lg gradient-custom-4 text-body">Change Password</button>
                                    </div>


                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>



