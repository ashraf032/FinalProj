    <div class="details">
        <section id="baskets">
            @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
            {
                <div id="id03" class="modal">
                    <div class="modal-content animate">
                        <div class="cancel_button">
                            <div onclick="document.getElementById('id03').style.display='none'" class="cancelbtn">
                                X
                            </div>
                        </div>
                        <div class="orders">
                            <ul id="basket-items">
                                @foreach (var item in Model.BasketVM.BasketItemVMs)
                                {
                                    <li class="basket-item-li">
                                        <div id="count-mob" style="display:none" class="count ">
                                            <p>
                                                @item.Count
                                            </p>
                                        </div>
                                        <div class="input-group plus-minus-input">
                                            <div class="input-group-button">
                                                <button type="button" class="button hollow circle item-decrease " data-quantity="minus"
                                                        data-field="quantity">
                                                    <i id="@item.Product.Id" class="fa fa-minus" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                            <p class="input-group-field">@item.Count</p>
                                            <div class="input-group-button">
                                                <button type="button" class="button hollow circle item-increase" data-quantity="plus"
                                                        data-field="quantity">
                                                    <i id=" @item.Product.Id" class="fa fa-plus" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </div>

                                        <div class="name-price ">
                                            <div class="name">
                                                @item.Product.Name
                                            </div>
                                            <div class="price">
                                                <p style="display:none">
                                                    @(price=item.Price.ToString())
                                                </p>
                                                AZN @(price.Length>4?price.Substring(0,5):price)
                                            </div>
                                        </div>
                                        <div style="height:3rem;" class="image ">
                                            <img style="height:100%;" src="~/assets/image/@item.Product.Image" alt="">
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div><b>Your Order</b></div>
                        <a asp-controller="storeorder" asp-action="checkout" asp-route-id="@Model.Store.Id" class="submit_button">
                            <div class="basket">
                                <div class="info-basket ">
                                    <div class="count total-count">@Model.BasketVM.Count</div>

                                    <div class="view-order">
                                        Check Out
                                    </div>
                                    <div class="totalprice">
                                        <p style="display:none;">
                                            @(totalprice=Model.BasketVM.TotalPrice.ToString())
                                        </p>
                                        Azn: @(totalprice.Length>4? totalprice.Substring(0,5): totalprice)
                                    </div>
                                </div>
                            </div>
                        </a>


                    </div>
                </div>
            }
        </section>
        <img class="bg" style="display: none;" src="~/assets/image/@Model.Store.Image" alt="">
        <header data-aos="fade-right">
            <div class="head-menu">
                <div class="menu">
