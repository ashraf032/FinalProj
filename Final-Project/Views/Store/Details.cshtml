                        <input class="usernamelogin" type="text" placeholder="Enter Username" asp-for="@Model.loginUser.UserName">
                        <label for="psw"><b>Password</b></label>
                        <input class="passwordlogin" type="password" asp-for="@Model.loginUser.Password" placeholder="Enter Password">
                        <button class="submit_button submit_login" type="submit">Login</button>
                        <label>
                            <input type="checkbox" checked="checked" name="remember"> Remember me
                        </label>
                        <div class=" container">
                            <span class="psw "> <a href="#">Forgot password?</a></span>
                        </div>

                    </div>
                </form>
            </div>
            <div id="id02" class="modal">
                <form class="modal-content animate" asp-area="" asp-controller="account" asp-action="register" method="post">
                    <div style="display:none" id="modelonly" class="alert alert-danger"></div>
                    <div class="container">
                        <div class="cancel_button"><div onclick="document.getElementById('id02').style.display='none'" class="cancelbtn">X</div></div>
                        <label asp-for="@Model.RegisterVM.FullName"><b>FullName</b></label>
                        <input class="fullname" type="text" placeholder="Enter FullName" asp-for="@Model.RegisterVM.FullName">
                        <div><span id="fullname" class="mt-2 text text-danger" asp-validation-for="@Model.RegisterVM.FullName"></span></div>

                        <label asp-for="@Model.RegisterVM.UserName"><b>UserName</b></label>
                        <input class="username" type="text" placeholder="Enter UserName" asp-for="@Model.RegisterVM.UserName">
                        <div><span id="username" class="mt-2 text text-danger" asp-validation-for="@Model.RegisterVM.UserName"></span></div>

                        <label asp-for="@Model.RegisterVM.PhoneNumber"><b>PhoneNumber</b></label>
                        <input class="phonenumber" style="width: 100%;border: 1px solid #ccc; padding:12px 20px;" type="tel" placeholder="Enter PhoneNumber" asp-for="@Model.RegisterVM.PhoneNumber">
                        <div><span id="phonenumber" class="mt-2 text text-danger" asp-validation-for="@Model.RegisterVM.PhoneNumber"></span></div>

                        <label asp-for="@Model.RegisterVM.Email"><b>Email</b></label>
                        <input class="email" type="text" placeholder="Enter Email" asp-for="@Model.RegisterVM.Email">
                        <div><span id="email" class="mt-2 text text-danger" asp-validation-for="@Model.RegisterVM.Email"></span></div>

                        <label asp-for="@Model.RegisterVM.Password"><b>Password</b></label>
                        <input class="password" type="password" placeholder="Enter Password" asp-for="@Model.RegisterVM.Password">
                        <div><span id="password" class="mt-2 text text-danger" asp-validation-for="@Model.RegisterVM.Password"></span></div>

                        <label asp-for="@Model.RegisterVM.ConfirmPassword"><b>Confirm Password</b></label>
                        <input class="confirmpassword" type="password" placeholder="Confirm Password" asp-for="@Model.RegisterVM.ConfirmPassword">
                        <div><span id="confirmpassword" class="mt-2 text text-danger" asp-validation-for="@Model.RegisterVM.ConfirmPassword"></span></div>

                        <button class="submit_button submit_button_register" type="submit">Login</button>
                        <label>
                            <input class="terms" asp-for="@Model.RegisterVM.Terms" type="checkbox" checked="checked" name="remember"> Termss
                        </label>
                    </div>
                    <div class="container">
                        <span class="psw"> <a href="#">Forgot password?</a></span>
                    </div>
                </form>
            </div>
        </div>
