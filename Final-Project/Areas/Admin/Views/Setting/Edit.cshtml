@model Setting
@{
    ViewData["Title"] = "Edit";
}
<div style="background-color:gainsboro" class="container">
    <div class="card-body row">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6" style="margin-bottom:40px;" >
                    <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;" asp-for="@Model.LogoFile">Main Logo</label>
                    <input asp-for="@Model.LogoFile" accept="image/*" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.LogoFile"></span>
                    <p style="margin-top:15px;">Exsist Logo</p>
                    <img style="margin-top:15px; display:block;" width="200" src="~/assets/image/@Model.Logo" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-2 ">

                    <label asp-for="@Model.InstagramLink">Instagram Link:</label>
