@model EditAdminVM
@using Final_Project.ViewModels
@{
    ViewData["Title"] = "EditAdmin";
}
<div class="container">
    <div class="login-form d-flex justify-content-center">

        <form style="width:50%;" method="post">
            <div class="alert alert-danger " asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input class="form-control" asp-for="FullName" placeholder="FullName">
                <div> <span class="text text-danger" asp-validation-for="FullName"></span></div>

                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" placeholder="UserName">
                <div> <span class="text text-danger" asp-validation-for="UserName"></span></div>

                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" placeholder="Email">
                <div> <span class="text text-danger" asp-validation-for="Email"></span></div>

                <label asp-for="PhoneNumber"></label>
                <input class="form-control" t asp-for="PhoneNumber" placeholder="PhoneNumber">
                <div><span class="text text-danger" asp-validation-for="PhoneNumber"></span></div>

                <label asp-for="Role"></label>
                <select class="form-select" style="margin-bottom:10px;" asp-for="Role">
                    @foreach (var a in ViewBag.Roles)
                    {
                        <option value="@a">@a</option>
                    }
                </select>
                <div><span class=" text text-danger" asp-validation-for="Role"></span></div>

                <label asp-for="CurrentPassword"></label>
                <input class="form-control" asp-for="CurrentPassword" placeholder="CurrentPassword">
                <div> <span class="text text-danger" asp-validation-for="CurrentPassword"></span></div>

                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" placeholder="Password">
                <div> <span class="text text-danger" asp-validation-for="Password"></span></div>

                <label asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                <div><span class="text text-danger" asp-validation-for="ConfirmPassword"></span></div>

                <div style="text-align:right;" class="button-box mt-2">
                    <button type="submit" class="btn btn-outline-secondary">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}