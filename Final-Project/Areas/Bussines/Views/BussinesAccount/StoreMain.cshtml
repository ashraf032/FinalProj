@model BussinesOrderVM

@{
    ViewData["Title"] = "StoreMain";
    double totalsale = 0;
    double totalcart = 0;
    double totalcash = 0;
    double totalcourier = 0;
}



<div class="container">

    <div class="row">
        <div class="col-md-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title">completed orders</p>
                    <div class="table-responsive">
                        <table id="recent-purchases-listing" class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Client</th>
                                    <th>Payment Method</th>
                                    <th>Date</th>
                                    <th>Price</th>

                                </tr>

                            </thead>
                            @foreach (Order order in Model.OrdersTotal)
                            {
                                <td class="d-none">
                                    @(totalsale+=order.TotalPrice)
                                    @if (order.IsCard)
                                    {
                                        @(totalcart+=order.TotalPrice)
                                    }
                                    else
                                    {
                                        @(totalcash+=order.TotalPrice)
                                    }
                                    @if (order.IsDelivery)
                                    {
                                        @(totalcourier +=totalcourier+2)
                                    }
                                </td>
                            }
                            <tbody>
                                @foreach (Order order in Model.Orders)
                                {
                                    <tr>

                                        <td>@order.Id</td>
                                        <td>@order.AppUser.FullName</td>
                                        <td>@(order.IsCard?"Card":"Cash")</td>
                                        <td>@order.Date.ToString("yyyy:dd:MMM")</td>
                                        <td>Azn @order.TotalPrice</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (ViewBag.CurrentPage == 1)
            {

                <li class="page-item">
                    <a style="pointer-events:none" class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

            }
            else
            {
                <li class="page-item">
                    <a asp-controller="bussinesaccount" asp-action="storemain" asp-route-page="@(ViewBag.CurrentPage-1)" class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

            }

            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                <li class="page-item  @(ViewBag.CurrentPage == i ?  "active" : "")" style="@(ViewBag.CurrentPage==i ? "pointer-events:none" :"")"><a class="page-link" asp-controller="bussinesaccount" asp-action="storemain" asp-route-page="@i">@i</a></li>
            }

            @if (ViewBag.TotalPage == ViewBag.CurrentPage)
            {
                <li class="page-item">
                    <a style="pointer-events:none" class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a asp-controller="bussinesaccount" asp-action="storemain" asp-route-page="@(ViewBag.CurrentPage+1)" class="page-link" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }


        </ul>
    </nav>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body dashboard-tabs p-0">

                    <div class="tab-content py-0 px-0">
                        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                            <div class="d-flex flex-wrap justify-content-xl-between">
                                <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                    <i class="mdi mdi-currency-usd me-3 icon-lg text-danger"></i>
                                    <div class="d-flex flex-column justify-content-around">
                                        <small class="mb-1 text-muted">Total Sale</small>
                                        <h5 class="me-2 mb-0">Azn @totalsale.ToString("f2")</h5>
                                    </div>
                                </div>
                                <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">

                                    <i class="fa-brands me-3 icon-lg fa-cc-amazon-pay text-secondary"></i>
                                    <div class="d-flex flex-column justify-content-around">
                                        <small class="mb-1 text-muted">Total paid by card </small>
                                        <h5 class="me-2 mb-0">Azn @totalcart.ToString("f2")</h5>
                                    </div>
                                </div>
                                <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">


                                    <i class=" me-3 icon-lg text-secondary fa-solid fa-manat-sign"></i>
                                    <div class="d-flex flex-column justify-content-around">
                                        <small class="mb-1 text-muted">Downloads</small>
                                        <h5 class="me-2 mb-0">Azn @totalcash.ToString("f2")</h5>
                                    </div>
                                </div>
                                <div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                    <i class=" me-3 icon-lg text-info fa-solid fa-percent"></i>
                                    <div class="d-flex flex-column justify-content-around">
                                        <small class="mb-1 text-muted">Interest held</small>
                                        <h5 class="me-2 mb-0">20% Azn @((totalsale*20)/100)</h5>
                                    </div>
                                </div>
                                <div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">

                                    <i class=" me-3 icon-lg text-success fa-solid fa-person-booth"></i>
                                    <div class="d-flex flex-column justify-content-around">
                                        <small class="mb-1 text-muted">courier </small>
                                        <h5 class="me-2 mb-0">20% Azn @totalcourier.ToString("f2")</h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>



</div>


